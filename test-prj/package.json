{
  "name": "react-arch-wizard-mcp",
  "version": "2.0.0",
  "description": "智能对话式React架构生成工具 - 通过AI对话让所有人都能创建专业的React架构",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "mcp:dev": "tsx src/mcp-server/server.ts",
    "mcp:build": "tsc -p tsconfig.mcp.json",
    "mcp:start": "node dist/mcp-server/server.js",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "docs:dev": "typedoc --watch",
    "docs:build": "typedoc",
    "setup:claude": "node scripts/setup-claude-integration.js",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "react",
    "architecture",
    "mcp",
    "ai",
    "code-generation",
    "typescript",
    "best-practices",
    "scaffolding"
  ],
  "author": {
    "name": "React Arch Wizard Team",
    "email": "team@react-arch-wizard.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-arch-wizard/react-arch-wizard-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/react-arch-wizard/react-arch-wizard-mcp/issues"
  },
  "homepage": "https://react-arch-wizard.dev",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "handlebars": "^4.7.8",
    "lodash-es": "^4.17.21",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "commander": "^11.1.0",
    "cosmiconfig": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/lodash-es": "^4.17.12",
    "@types/uuid": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "typedoc": "^0.25.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "mcp": {
      "server": {
        "name": "react-arch-wizard",
        "description": "智能React架构生成工具MCP服务器",
        "version": "2.0.0"
      },
      "tools": [
        "create_project",
        "analyze_architecture", 
        "configure_specifications",
        "generate_code",
        "validate_architecture"
      ]
    }
  },
  "files": [
    "dist/",
    "src/",
    "examples/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ]
}